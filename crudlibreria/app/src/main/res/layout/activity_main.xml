<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/libreriaprincipal"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="417dp"
        android:layout_height="71dp"
        android:layout_marginBottom="776dp"
        android:background="#FFC107"
        android:backgroundTint="#FFC107"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btnHome"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#FFC107"
            android:textColorLink="#008496"
            app:icon="@drawable/home"
            app:iconGravity="start"
            app:iconPadding="8dp"
            app:iconSize="60dp"
            app:iconTint="@color/white" />

        <Button
            android:id="@+id/btnLibro"
            android:layout_width="wrap_content"
            android:layout_height="69dp"
            android:layout_weight="1"
            android:backgroundTint="#FFC107"
            android:gravity="center"
            app:icon="@drawable/book_solid"
            app:iconGravity="start"
            app:iconSize="40dp"
            app:iconTint="#FFF9F9" />

        <Button
            android:id="@+id/btnUsuario"
            android:layout_width="wrap_content"
            android:layout_height="69dp"
            android:layout_weight="1"
            android:backgroundTint="#FFC107"
            app:icon="@drawable/person"
            app:iconSize="60dp"
            app:iconTint="#FFFFFF" />

        <Button
            android:id="@+id/btnPrestamo"
            android:layout_width="wrap_content"
            android:layout_height="69dp"
            android:layout_weight="1"
            android:backgroundTint="#FFC107"
            app:icon="@drawable/prestamo"
            app:iconSize="50dp"
            app:iconTint="#FFFFFF" />

        <Button
            android:id="@+id/btnMulta"
            android:layout_width="wrap_content"
            android:layout_height="69dp"
            android:layout_weight="1"
            android:backgroundTint="#FFC107"
            app:icon="@drawable/multa"
            app:iconSize="60dp"
            app:iconTint="#FFFFFF" />

    </LinearLayout>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentContainerView"
        android:name="com.example.crudlibreria.pagina_Principal"
        android:layout_width="419dp"
        android:layout_height="728dp"
        android:backgroundTint="#C8B3EF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.588" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="394dp"
        android:layout_height="71dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/fragmentContainerView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.122">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="266dp"
            android:layout_height="74dp"
            android:layout_weight="1"
            android:backgroundTint="#000000"
            android:fontFamily="cursive"
            android:gravity="bottom|center"
            android:text="Libreria A."
            android:textAlignment="center"
            android:textColor="#FFC107"
            android:textSize="48sp"
            android:textStyle="bold" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>